@model Phase3App01.Models.CustomerDb

@{
    ViewData["Title"] = "Login";
}

<h1>Login</h1>

<h4>CustomerDb</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Login">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Cusername" class="control-label"></label>
                <input asp-for="Cusername" class="form-control" />
                <span asp-validation-for="Cusername" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Cpassword" class="control-label"></label>
                <input asp-for="Cpassword" class="form-control" />
                <span asp-validation-for="Cpassword" class="text-danger"></span>
            </div>
            
            <div class="form-group">
                <input type="submit" value="Login" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>
@ViewBag.msg
<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
