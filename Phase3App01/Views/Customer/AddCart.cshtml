@model IEnumerable<Phase3App01.Models.CartDetail11>

@{
    ViewData["Title"] = "AddCart";
    int sum = 0;
}

<h1>AddCart</h1>
@ViewBag.msg
@ViewBag.user
<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Itemname)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Itemprice)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Itemname)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Itemprice)
                @{ sum =sum+ (int)item.Itemprice;}
            </td>
            <td>
          
                <a asp-action="DeleteProduct" asp-route-id="@item.Itemid">Delete</a>
            </td>
        </tr>
}
        <tr>
          <td>Total Cart</td> <td>@sum</td>
            <td><a asp-action="Checkout" asp-route-id="@ViewBag.user">Checkout</a></td>
            <td> <input type="button" value="Checkout" action="Checkout" asp-route-id="@ViewBag.user"/></td>
        </tr>
        
    </tbody>
</table>
