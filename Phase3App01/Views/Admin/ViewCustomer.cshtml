@model IEnumerable<Phase3App01.Models.CustomerDb>

@{
    ViewData["Title"] = "ViewCustomer";
}

<h1>ViewCustomer</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Cusername)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Cpassword)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Caddress)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Cusername)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Cpassword)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Caddress)
            </td>
            <td>
                <a asp-action="EditCustomer" asp-route-id="@item.Cid">Edit</a> |
                <a asp-action="DetailsCustomer" asp-route-id="@item.Cid">Details</a> |
                <a asp-action="DeleteCustomer" asp-route-id="@item.Cid">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
